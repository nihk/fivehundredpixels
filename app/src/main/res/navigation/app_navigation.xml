<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/app_navigation"
    app:startDestination="@id/photoShowcaseFragment">

    <fragment
        android:id="@+id/photoShowcaseFragment"
        android:name="nick.photoshowcase.ui.PhotoShowcaseFragment"
        android:label="PhotoShowcaseFragment"
        tools:layout="@layout/fragment_photo_showcase">

        <action
            android:id="@+id/to_details"
            app:destination="@id/photodetails_navigation"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim">

            <argument
                android:name="id"
                app:argType="long" />

        </action>

    </fragment>

    <include app:graph="@navigation/photodetails_navigation" />

</navigation>